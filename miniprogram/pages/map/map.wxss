/* miniprogram/pages/map/map.wxss */
.wrapper {
  height: 100%;
}
.head-img {
  width: 100%;
  height: 180rpx;
  margin-bottom: 50rpx;
}

.content {
  height:600rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  width: 690rpx;
}
.call {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}
.call  .left {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.call  .left .img{
  height: 64rpx;
  width: 64rpx;
}
.call  .left .img .link {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #6B4F4E;
}
.footer {
  height:80rpx;
  width:716rpx;
  margin-left:17rpx;
}